.container
	.breadcrumbs.breadcrumbs--margin
		ul
			li: a(href="#") Главная
			li: a(href="#") Поддержка
			li Техническая поддержка

	.top-menu-list
		ul
			li: a(href="#") Поддержка
			li: a(href="#") Гарантия
			li: a(href="#") Обслуживание и ремонт
			li.is-active Техническая поддержка

	.page-support-detail
		.page-support-detail__intro
			.page-support-detail__intro__content
				h1.page-support-detail__intro__title
					| Техническая поддержка
				.page-support-detail__intro__text
					| В&nbsp;этом разделе вы&nbsp;найдете актуальные технические документы и&nbsp;обзоры для работы с&nbsp;оборудованием Kentatsu
			.page-support-detail__intro__image
				img(src="./images/support-detail.png" alt="")

		.tab(data-app="tab")
			.tab__list
				ul
					li: a.is-active(href="#" data-tab="tab-1") Инструкции
					li: a(href="#" data-tab="tab-2") Технические каталоги
					li: a(href="#" data-tab="tab-3") Коды ошибок
					li: a(href="#" data-tab="tab-4") Видеообзоры
			.tab__content
				.tab__item.is-active(data-tab="tab-1")
					form.page-support-detail__filter(action="#" data-filter="files-1")
						.page-support-detail__filter__select(data-app="select")
							.input__label
								| Категория оборудования
							.input__field
								select(name="cat")
									option(value="1") Бытовые кондиционеры
									option(value="2") Бытовые кондиционеры 2
									option(value="3") Бытовые кондиционеры 3
									option(value="4") Бытовые кондиционеры 4
									option(value="5") Бытовые кондиционеры 5
						.page-support-detail__filter__search.input
							.input__label
								| Поиск по&nbsp;модели
							.input__field.input__field--search
								input(type="text" name="q" placeholder="Введите название модели" required)
								button.input__field__reset(type="button")
								button.input__field__submit(type="button"): +svg('search')
					.page-support-detail__files(data-list="files-1" data-ajax="support-detail-load.html" data-target-filter="files-1")

